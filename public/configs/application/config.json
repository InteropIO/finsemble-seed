{
	"comment": "Top-level application config for development, adding on top of the core config",
	"$schema": "../../../node_modules/@finsemble/finsemble-core/configs/schemas/fileBasedSchemas/applicationConfigFile.schema.json",
	"accessibleLinker": true,
	"authentication": {
		"startup": {
			"adapter": "PASSWORD",
			"component": "Registration"
		}
	},
	"servicesConfig": {
		"distributedStore": {
			"initialStores": [
				{
					"name": "Finsemble-AppLauncher-Store",
					"preferPreviousState": true,
					"foundation": {
						"appFolders": {
							"list": [
								"Advanced App Launcher",
								"Favorites"
							],
							"folders": {
								"Advanced App Launcher": {
									"icon": "ff-component",
									"type": "folder",
									"canDelete": false,
									"apps": [
										{
											"name": "Welcome Component",
											"appID": "welcome-comp"
										},
										{
											"name": "Getting Started Tutorial",
											"appID": "2"
										},
										{
											"name": "Process Monitor",
											"appID": "pm"
										},
										{
											"name": "Notepad",
											"appID": "note"
										}
									]
								},
								"Favorites": {
									"icon": "ff-favorite",
									"type": "folder",
									"canDelete": false,
									"apps": []
								}
							}
						},
						"appDefinitions": {}
					},
					"default": {
						"activeLauncherTags": [],
						"filterText": "",
						"activeTags": [],
						"filteredApps": [],
						"filterTags": [],
						"activeFolder": "Advanced App Launcher",
						"sortBy": "Alphabetical"
					}
				}
			]
		},
		"launcher": {
			"staggerPixels": 40,
			"unknownComponent": "nonConfiguredComponent",
			"defaultPreloads": {
				"//": "Add preloads that will be injected into each browserView."
			}
		},
		"assimilation": {
			"useFeaSpawn": false,
			"enabled": true,
			"blacklist": [],
			"whitelist": [],
			"onlySpawned": true,
			"throttle": 10,
			"focusDelay": 30,
			"eventIgnore": 50,
			"hideTitleBars": false
		},
		"docking": {
			"enabled": true,
			"groupTileBuffer": 30,
			"headerHeight": 32,
			"MINIMUM_WIDTH": 175,
			"requireRectangularityForGroupResize": true,
			"undockDisbandsEntireGroup": true,
			"fillHolesOnUndock": true,
			"tabbing": {
				"enabled": true
			},
			"tiling": {
				"enabled": true
			}
		},
		"linker": {
			"enabled": false
		},
		"logger": {
			"hotkeyShowCentralLogger": [
				"ctrl",
				"shift",
				"L"
			]
		},
		"storage": {
			"defaultStorage": "InMemoryStorageAdapter",
			"topicToDataStoreAdapters": {
				"finsemble": "InMemoryStorageAdapter",
				"finsemble.workspace": "InMemoryStorageAdapter",
				"finsemble.workspace.cache": "InMemoryStorageAdapter"
			},
			"dataStoreAdapters": {
				"LocalStorageAdapter": "$applicationRoot/adapters/localStorageAdapter.js",
				"IndexedDBAdapter": "$applicationRoot/adapters/indexedDBAdapter.js",
				"InMemoryStorageAdapter": "$applicationRoot/adapters/InMemoryStorageAdapter.js",
				"StorageAdapter": "$applicationRoot/StorageAdapter/index.js"
			}
		},
		"workspace": {
			"promptUserOnDirtyWorkspace": true
		}
	},
	"systemTrayComponent": "SystemTrayComponent",
	"Window Manager": {
		"alwaysOnTopIcon": false,
		"floatingTitlebarComponent": "Floating Titlebar"
	},
	"globalHotkeys": {},
	"//": "this importConfig contains components that are necessary to start Finsemble. All other components are loaded dynamically. See server/auth/test.json",
	"importConfig": [
		"$configRoot/application/appd.json",
		"$configRoot/application/UIComponents.json",
		"$configRoot/application/components.json",
		"$configRoot/application/workspaces.json",
		"$configRoot/application/services.json",
		"$configRoot/application/securityPolicies.json",
		"$configRoot/application/dashbarConfig.json"
	],
	"toolbarMenus": {},
	"components": {
		"Toolbar": {
			"uiComponent": true,
			"bootParams": {
				"stage": "earlyuser",
				"checkpoints": {
					"initialize": {
						"postStartupCompletion": true
					}
				}
			},
			"window": {
				"id": "launcher",
				"url": "$applicationRoot/components/toolbar/toolbar.html",
				"affinity": "systemComponents",
				"width": 600,
				"height": 39,
				"dockedHeight": 39,
				"top": 0,
				"left": 0,
				"right": 0,
				"position": "available",
				"dockable": [
					"top",
					"bottom"
				],
				"maxHeight": 39,
				"minHeight": 39,
				"minWidth": 300,
				"docked": "top",
				"canGroup": false,
				"options": {
					"autoShow": true,
					"contextMenu": false,
					"showTaskbarIcon": true,
					"smallWindow": true,
					"maximizable": false
				}
			},
			"component": {
				"category": "system",
				"spawnOnStartup": true,
				"spawnOnAllMonitors": false,
				"canMinimize": false,
				"canMaximize": false
			},
			"foreign": {
				"services": {
					"windowService": {
						"allowAutoArrange": false,
						"allowSnapping": false,
						"allowTabbing": false,
						"allowTiling": false
					},
					"workspaceService": {
						"global": true
					}
				},
				"components": {
					"App Launcher": {
						"launchableByUser": false
					},
					"Window Manager": {
						"persistWindowState": false,
						"FSBLHeader": false
					}
				}
			},
			"childWindowOptions": {
				"window": {
					"resizable": false,
					"maxHeight": null,
					"minHeight": null,
					"dockable": false,
					"show": false
				},
				"foreign": {
					"components": {
						"Window Manager": {
							"FSBLHeader": false
						}
					},
					"services": {
						"windowService": {
							"manageWindowMovement": false
						},
						"workspaceService": {
							"addToWorkspace": false
						}
					}
				}
			}
		}
	}
}
