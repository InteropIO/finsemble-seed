				"Finsemble": {
					"window": {
						"affinity": "test",
						"width": 800,
						"height": 600,
						"options": {
							"minWidth": 175
						}
					},
					"foreign": {
						"components": {
							"App Launcher": {
								"launchableByUser": true
							},
							"Toolbar": {
								"iconClass": "ff-chart-advanced"
							},
							"Window Manager": {
								"FSBLHeader": true,
								"persistWindowState": true
							}
						}
					},
					"interop": {
						"selectConnect": [
							{
								"contextType": "layout",
