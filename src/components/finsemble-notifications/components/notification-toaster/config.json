{
	"components": {
		"notification-toaster": {
			"window": {
				"name": "notification-toaster",
				"url": "$applicationRoot/components/finsemble-notifications/components/notification-toaster/notification-toaster.html",
				"forceOntoMonitor": true,
				"bottom": 0,
				"left": "50%",
				"height": 45,
				"width": 150,
				"position": "available",
				"options": {
					"resizable": false,
					"transparent": true,
					"alwaysOnTop": true,
					"showTaskbarIcon": false,
					"autoShow": true
				},
				"data": {
					"notifications": {
						"hotkey": ["ctrl", "alt", "shift", "t"]
					}
				}
			},
			"component": {
				"preload": false,
				"spawnOnStartup": true,
				"singleton": true
			},
			"foreign": {
				"services": {
					"windowService": {
						"manageWindowMovement": true,
						"allowSnapping": false,
						"allowGrouping": false,
						"allowAutoArrange": false,
						"allowMinimize": false
					}
				},
				"components": {
					"App Launcher": {
						"launchableByUser": false
					},
					"Window Manager": {
						"title": "notification-toaster",
						"FSBLHeader": false
					},
					"Toolbar": {
						"iconClass": "notification-toaster"
					}
				}
			}
		}
	}
}
