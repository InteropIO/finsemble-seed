{
	"components": {
		"notification-drawer": {
			"window": {
				"name": "notification-drawer",
				"url": "$applicationRoot/components/finsemble-notifications/components/notification-drawer/notification-drawer.html",
				"forceOntoMonitor": true,
				"top": 0,
				"right": 0,
				"width": 320,
				"height": "100%",
				"position": "available",
				"monitor": "primary",
				"options": {
					"transparent": true,
					"alwaysOnTop": true,
					"autoShow": true,
					"resizable": false,
					"showTaskbarIcon": false
				},
				"data": {
					"notifications": {
						"notificationsHistory": true
					}
				}
			},
			"component": {
				"preload": false,
				"spawnOnStartup": true,
				"singleton": true
			},
			"foreign": {
				"components": {
					"App Launcher": {
						"launchableByUser": false
					},
					"Window Manager": {
						"title": "notification-drawer",
						"FSBLHeader": false
					},
					"Toolbar": {
						"iconClass": "notification-drawer"
					}
				}
			}
		}
	}
}
