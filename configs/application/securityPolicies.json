{
	"$schema": "../schemas/finsemble.schema.json",
	"securityPolicies": {
		"//trusted": "By default, the trusted policy allows access to every API endpoint.",
		"trusted": {},
		"untrusted": {
			"System": {
				"clearCache": false,
				"exit": false,
				"launchExternalProcess": false
			},
			"Window": {
				"executeJavaScript": false,
				"webPreferences": {
					"preload": false
				}
			}
		}
	},
	"securityPolicyRules": {
		"crossDomain": "untrusted",
		"sameDomain": "trusted"
	}
}
